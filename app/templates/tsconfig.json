{
  "version": "2.0.3",
  "compilerOptions": {
    "noImplicitUseStrict": true,
    "baseUrl": ".",
    "files": [
      "libs/**/*.ts",
      "widgets/**/*.ts"
    ],
    "types": [
      "type-declarations/index.d.ts",
      "typings/index.d.ts"
    ],
    "module": "amd",
    "target": "es6",
    "lib": ["es6", "dom"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./ts-build"
  },
  "exclude": [
    "node_modules"
  ]
}
